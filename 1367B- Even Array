#include <bits/stdc++.h>
using namespace std;
typedef long long int ll;
#define vi vector<int>
#define pii <pair<int,int>>
#define vii vector<pii>
#define rep(i,a,b) for(int i=a;i<b;i++)
#define repe(i,c,d) for(int i=c;i<=d;i++)
#define mp map<int,int>
const int INF=1e9;
int main()
{
    int t;
    cin>>t;
    while(t--)
    {
        int n,b(0),c(0);
        cin>>n;
        int a[n];
    for(int i=0;i<n;i++)
    {
    cin>>a[i];
    }
    for(int i=0;i<n;i+=2)
    {
        if(a[i]%2!=0)
           b++;
}
for(int i=1;i<n;i+=2)
{
        if(a[i]%2==0)
            c++;
    }
    if(b==c)
        cout<<b<<endl;
    else
        cout<<-1<<endl;
}
}
 
