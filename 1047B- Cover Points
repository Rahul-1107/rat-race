#include<bits/stdc++.h>                                 
#define ll         long long
#define ull        unsigned long long
#define fastread() (ios_base::sync_with_stdio(false),cin.tie(NULL));
#define f1(i,a,b)  for(int i=a;i<b;i++)
#define f2(i,a,b)  for(int i=a;i<=b;i++)
#define f3(i,a,b)  for(int i=a;i>=b;i++)
using namespace std;
int main()
{
    fastread();
    ll n,ans=0;
    cin>>n;
    while(n--)
    {
        ll x,y;
        cin>>x>>y;
        ans=max(ans,x+y);
    }
    cout<<ans;
    return 0;
}
